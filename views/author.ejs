<%-include('fragmentos/header')%>
<div class="container" style="margin-top:30px;">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Registro de Autores</h1>
      <%- locals.flash %>
      <form action="/api/addAuthor" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <input type="text" class="form-control" name="name" id="name">
        </div>
        <div class="form-group">
          <label>País de Origen</label>
          <select name="country" id="countries" class="form-control"></select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
    </div>
  </div>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nro</th>
        <th scope="col">Nombre</th>
        <th scope="col">País de Origen</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>

  <div class="modal fade" id="editAuthor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Editar Autor</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <div class="card-body">

              <%- locals.flash %>
              <form action="/api/editAuthor" method="post">
                <div class="form-group">
                  <label>Nombre</label>
                  <input type="text" class="form-control" name="name" id="nameEdit">
                  </select>
                </div>
                <div class="form-group">
                  <label>País de Origen</label>
                  <select name="country" id="countriesEdit" class="form-control"></select>
                </div>
                <input type="text" hidden id="idAuthorEdit" name="idAuthor">
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="deleteAuthor" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Eliminar Autor</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <div class="card-body">
              <form action="/api/deleteAuthor" method="post">
                <h2>¿Estás seguro que deseas eliminar este autor?</h2>
                <input type="text" hidden id="idAuthorDelete" name="idAuthor">
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="addRelation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Agregar relación con libro</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <div class="card-body">
              <form action="/api/addRelationAuthor" method="post">
                <input type="text" hidden id="idAuthorRelation" name="idAuthor">
                <div class="form-group">
                  <label>Seleccione el libro que desea relacionar</label>
                  <select name="idBook" id="AuthorRelation" class="form-control"></select>
                </div>
                <div class="form-group">
                  <label>Año de publicación</label>
                  <input type="text" class="form-control" name="year">
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="books" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Listado de Libros del Autor</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <div class="card-body">
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Nro</th>
                    <th scope="col">Nombre</th>
                  </tr>
                </thead>
                <tbody id="tableBooks">
                </tbody>
              </table>
              <button type="submit" class="btn btn-primary btn-block" data-dismiss="modal">Aceptar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<%-include('fragmentos/footer')%>