<%-include('fragmentos/header')%>
<div class="container" style="margin-top:30px;">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Registro de Libros</h1>
      <%- locals.flash %>
      <form action="/api/addBook" method="post">
        <div class="form-group">
          <label>Titulo</label>
          <input type="text" class="form-control" name="title" id="title">
        </div>
        <div class="form-group">
          <label>Número de Páginas</label>
          <input type="text" class="form-control" name="pages" id="pages">
        </div>
        <div class="form-group">
          <label>Descripcion</label>
          <textarea name="description" id="description" class="form-control" cols="30" rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
    </div>
  </div>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nro</th>
        <th scope="col">Autor</th>
        <th scope="col">Titulo</th>
        <th scope="col">Número de Páginas</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody id="tableBook">
    </tbody>
  </table>

  <div class="modal fade" id="editBook" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title">Editar Libro</h1>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <div class="card-body">
              <%- locals.flash %>
              <form action="/api/editBook" method="post">
                <div class="form-group">
                  <label>Titulo</label>
                  <input type="text" class="form-control" name="name" id="titleEdit">
                </div>
                <div class="form-group">
                  <label>Número de Páginas</label>
                  <input type="text" class="form-control" name="pages" id="pagesEdit">
                </div>
                <div class="form-group">
                  <label>Descripcion</label>
                  <textarea name="description" id="descriptionEdit" class="form-control" cols="30" rows="10"></textarea>
                </div>
                <input type="text" hidden name="idBook" id="idBookEdit">
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="deleteBook" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Eliminar Libro</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-body">
            <form action="/api/deleteBook" method="post">
              <h2>¿Estás seguro que deseas eliminar este libro?</h2>
              <input type="text" hidden id="idBookDelete" name="idBook">
              <button type="submit" class="btn btn-primary">Aceptar</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>

<%-include('fragmentos/footer')%>